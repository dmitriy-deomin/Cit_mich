<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:background="@color/colorFonDefoult"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name_i_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="версия"
        android:textColor="@color/colorText_Cena" />

    <TextView
        android:id="@+id/used_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="использовались библиотеки:"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_librariry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/used_library"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_ifo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=" Вся информация ,каталог товаров берется с www.cit-tmb.ru"
        android:textColor="@android:color/black"
        android:textSize="10sp" />

    <Button
        android:id="@+id/button_edit_fonts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:text="Изменить шрифт"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/donat"
        android:textColor="@color/colorText_tovarDefoult"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/send_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText_tovarDefoult"
        android:text="Написать пожелание,замечание" />

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/expandableLayout_send_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ael_duration="500"
        app:ael_expanded="false"
        app:ael_interpolator="bounce"
        app:ael_orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText_tovarDefoult"
                android:text="Vkontakte" />

            <TextView
                android:id="@+id/telegram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText_tovarDefoult"
                android:text="Telegram" />

            <TextView
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText_tovarDefoult"
                android:text="58627@bk.ru" />
        </LinearLayout>

    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
</LinearLayout>