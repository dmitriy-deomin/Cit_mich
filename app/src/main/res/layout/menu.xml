<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:background="@color/colorFonDefoult"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name_i_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="версия"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/used_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="использовались библиотеки:"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_librariry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jsoup, picasso,recyclerview-fastscroll"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_ifo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Вся информация ,каталог товаров берется с www.cit-tmb.ru"
        android:textColor="@android:color/black"
        android:textSize="10sp" />

    <Button
        android:id="@+id/button_edit_fonts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Изменить шрифт" />
</LinearLayout>